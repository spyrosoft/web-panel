!!!
%html.no-js{lang: 'en-US'}
  %head
    %meta{content: 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}
    %meta{charset: 'utf-8'}
    %meta{content: 'ie=edge', 'http-equiv' => 'x-ua-compatible'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    %title Panel
    %link{href: '/css/vendor/foundation.min.css', rel: 'stylesheet'}
    %link{href: '/css/app.css', rel: 'stylesheet'}
    %script{src: '/js/vendor/jquery.min.js'}
    %script{src: '/js/vendor/foundation.min.js'}
    %script{src: '/js/vendor/utilities.js'}
    %script{src: '/js/app.js'}
    %link{href: '/images/favicon.ico', rel: 'shortcut icon'}
    %link{href: '/images/apple-touch-icon.png', rel: 'apple-touch-startup-image'}
    -if page.description
      %meta{name: 'description', content: page.description}
  %body
    .row
      .columns
        ~ content
        .messages
          .error.template
          .message.template
    -if page.script
      %script{src: page.script}
    -if page.script2
      %script{src: page.script2}
    :javascript
      $(document).foundation();
      $('form.ajax').submit(ajax_form_submission);
